# .env.example
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For Supabase (get from: Supabase Dashboard → Settings → Database)
DB_HOST=db.xxxxx.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_supabase_database_password

# For Local PostgreSQL (uncomment if using local database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=learning_portal
# DB_USER=postgres
# DB_PASSWORD=postgres

# ============================================
# SUPABASE API (Optional)
# ============================================
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_anon_public_key
SUPABASE_SERVICE_KEY=your_service_role_secret_key

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# SESSION CONFIGURATION
# ============================================
# Generate a random secret key for production
SESSION_SECRET=change_this_to_a_random_secret_key

# ============================================
# ML/AI SERVICE URLS (Optional)
# ============================================
ML_SERVICE_URL=http://localhost:5000
AI_AGENT_URL=http://localhost:5001

# ============================================
# SECURITY LOGGING
# ============================================
ENABLE_SECURITY_LOGGING=true
LOG_LEVEL=info
